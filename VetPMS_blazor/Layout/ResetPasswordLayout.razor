@inherits LayoutComponentBase

<div class="page">

    <main>
        <div class="top-row px-4">
            <AuthorizeView>
                <Authorized>
                   
                    <div class="nav-item">
                        <NavLink class="text-white">
                            <i class="fas fa-user" aria-hidden="true"></i> @context.User?.Identity?.Name
                        </NavLink>
                    </div>

                    <div class="nav-item">
                        <NavLink class="text-white" href="/logout">
                            <i class="fas fa-door-open" aria-hidden="true"></i> Log Out
                        </NavLink>
                    </div>
                </Authorized>
                <NotAuthorized>
                    <div class="nav-item">
                        <NavLink class="text-white" href="/login">
                            <i class="fas fa-lock" aria-hidden="true"></i> Login
                        </NavLink>
                    </div>

                    
                </NotAuthorized>

            </AuthorizeView>
        </div>




        <article class="content px-4">
            @Body
        </article>
    </main>
</div>

<Blazored.Toast.BlazoredToasts />